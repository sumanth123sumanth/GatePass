<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amrita.gpms.security_login">

    <EditText
        android:id="@+id/et_gpno"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt_check"
        android:layout_alignBottom="@+id/bt_check"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter gpno"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/bt_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="148dp"
        android:layout_toEndOf="@+id/et_gpno"
        android:background="@drawable/backgndciryel"
        android:text=">"
        android:elevation="10dp"
        android:textColor="@color/colorWhite" />
</RelativeLayout>
