<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amrita.gpms.warden_login"
    android:id="@+id/ward_log"
    >

    <EditText
        android:id="@+id/et_username1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/rsz_user"
        android:ems="10"
        android:hint="Username"
        android:drawablePadding="5dp"
        android:inputType="text|textPersonName" />

    <EditText
        android:id="@+id/et_password1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_username1"
        android:layout_alignStart="@+id/et_username1"
        android:layout_marginStart="0dp"
        android:layout_marginTop="23dp"
        android:drawableLeft="@mipmap/rsz_passwd"
        android:ems="10"
        android:hint="Password"
        android:drawablePadding="5dp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/bt_login1"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="262dp"
        android:background="@drawable/round_bt"
        android:elevation="10dp"
        android:text="login"
        android:textColor="@android:color/white" />

</RelativeLayout>
