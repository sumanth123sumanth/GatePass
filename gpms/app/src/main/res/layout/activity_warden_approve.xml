<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amrita.gpms.warden_approve">


    <TextView
        android:id="@+id/tv_lregno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="24dp"
        android:text="Regno" />

    <TextView
        android:id="@+id/tv_neregno_s"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_lregno"
        android:layout_marginEnd="64dp"
        android:text=" " />

    <TextView
        android:id="@+id/tv_lgid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_lregno"
        android:layout_below="@+id/tv_lregno"
        android:layout_marginTop="26dp"
        android:text="Gid" />

    <TextView
        android:id="@+id/tv_negid_s"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_lgid"
        android:layout_alignEnd="@+id/tv_neregno_s" />

    <TextView
        android:id="@+id/tv_loutdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_lgid"
        android:layout_below="@+id/tv_lgid"
        android:layout_marginTop="22dp"
        android:text="Outdate" />

    <TextView
        android:id="@+id/tv_neoutdate_s"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_negid_s"
        android:layout_alignTop="@+id/tv_loutdate" />

    <TextView
        android:id="@+id/tv_lindate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_loutdate"
        android:layout_below="@+id/tv_loutdate"
        android:layout_marginTop="19dp"
        android:text="Indate" />

    <TextView
        android:id="@+id/tv_neindate_s"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_lindate"
        android:layout_alignEnd="@+id/tv_neoutdate_s" />

    <TextView
        android:id="@+id/tv_lreason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_lindate"
        android:layout_below="@+id/tv_lindate"
        android:layout_marginTop="24dp"
        android:text="reason"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_nereason_s"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_lreason"
        android:layout_alignStart="@+id/tv_neindate_s" />

    <TextView
        android:id="@+id/tv_lstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_lindate"
        android:layout_below="@+id/tv_lreason"
        android:layout_marginTop="20dp"
        android:text="Status"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_nestatus1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_nereason_s"
        android:layout_alignTop="@+id/tv_lstatus" />

    <Button
        android:id="@+id/bt_hold"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/tv_lstatus"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="131dp"
        android:background="@drawable/backgndciryel"
        android:elevation="10dp"
        android:text="H"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/bt_reject"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/bt_approve"
        android:layout_alignBottom="@+id/bt_approve"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="-3dp"
        android:background="@drawable/cirbackgndyellow"
        android:elevation="10dp"
        android:text="R"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/bt_approve"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/bt_hold"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cirbackgndgreen"
        android:elevation="10dp"
        android:text="A"
        android:textColor="@color/colorWhite" />

</RelativeLayout>
