<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.amrita.gpms.MainActivity"
    android:id="@+id/mnact"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:layout_marginTop="50dp"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/stu_card"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            app:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            app:cardCornerRadius="7dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:padding="10dp"
                    android:background="@drawable/matcolor"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/ic_stu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Student"
                    android:textSize="16.5dp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/war_card"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="7dp"
            card_view:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/cirbackgndpurple"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/ic_war" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Warden"
                    android:textSize="16.5dp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:layout_marginTop="5dp"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/admin_card"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="7dp"
            card_view:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/cirbackgndyellow"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/ic_admin" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Admin"
                    android:textColor="#000000"
                    android:textSize="16.5dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sec_card"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="7dp"
            card_view:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/cirbackgndgreen"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/ic_sec" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Security"
                    android:textSize="16.5dp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
